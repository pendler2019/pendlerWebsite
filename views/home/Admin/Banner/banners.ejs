<%- include('../../../_partials/dashboard/_header'); -%>
    <%- include('../../../_partials/dashboard/_sidebar'); -%>

        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row">
                    <div class="col-lg-12 grid-margin stretch-card">
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title" style="display: inline;">Banners List</h4>
                                <a class="card-description badge badge-success" href="/addbanner" style="color: white !important;margin-left: 80px;">Add</a>                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                
                                                <th>Actions</th>
                                                <th>Banner</th>
                                                <th>Banner Name</th>
                                                <th>Banner Content</th>
                                                <th>Sort-Order</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% banns.forEach(ban=> { %>
                                                <tr>
                                                    <td>
                                                        <a href="/images/<%= ban._id %>/edit" class="badge badge-info">Edit</a>
                                                        <form action="/images/<%= ban._id %>/delete" method="POST" style="display: inline;">
                                                          <button type="submit" class="badge badge-danger">Delete</button>
                                                        </form>
                                                      </td>
                                                    <td class="py-1">
                                                        <img src="../../images/<%= ban.imageUrl %>" alt="image" />
                                                    </td>
                                                    <td>
                                                        <%= ban.name %>
                                                    </td>
                                                    <td>
                                                        <%= ban.description %>
                                                    </td>
                                                    <td>
                                                        <%= ban.sortOrder %>
                                                    </td>
                                                   
                                                    
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%- include('../../../_partials/dashboard/_footer'); -%>
                        <!-- partial -->
                </div>
                <!-- main-panel ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        <script src="/dashboard/vendors/js/vendor.bundle.base.js"></script>
        <script src="/dashboard/vendors/typeahead.js/typeahead.bundle.min.js"></script>
        <script src="/dashboard/vendors/select2/select2.min.js"></script>
        <script src="/dashboard/js/off-canvas.js"></script>
        <script src="/dashboard/js/hoverable-collapse.js"></script>
        <script src="/dashboard/js/template.js"></script>
        <script src="/dashboard/js/settings.js"></script>
        <script src="/dashboard/js/todolist.js"></script>
        <!-- endinject -->
        <!-- Custom js for this page-->
        <script src="/dashboard/js/file-upload.js"></script>
        <script src="/dashboard/js/typeahead.js"></script>
        <script src="/dashboard/js/select2.js"></script>
        <!-- End custom js for this page-->
        </body>

        </html>