<%- include('../../../_partials/dashboard/_header'); -%>
<%- include('../../../_partials/dashboard/_sidebar'); -%>

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title" style="display: inline;">Services List</h4>
                        <a class="card-description badge badge-success" href="/addServices" style="color: white !important;margin-left: 80px;">Add</a>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Actions</th>
                                        <th>Services</th>
                                        <th>Service Name</th>
                                        <th>Sort-Order</th>
                                        <th>Service Content</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% ser.forEach(ban=> { %>
                                    <tr>
                                        <td>
                                            <a href="/serviceimages/<%= ban._id %>/edit" class="badge badge-info">Edit</a>
                                            <form action="/serviceimages/<%= ban._id %>/delete" method="POST" style="display: inline;">
                                                <button type="submit" class="badge badge-danger">Delete</button>
                                            </form>
                                        </td>
                                        <td class="py-1">
                                            <img src="../../images/<%= ban.imageUrl %>" alt="image" />
                                        </td>
                                        <td>
                                            <%= ban.name %>
                                        </td>
                                        <td>
                                            <%= ban.sortOrder %>
                                        </td>
                                        <td>
                                            <%= ban.description %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                        <div class="pagination-container">
                            <ul class="pagination">
                                <% if (currentPage > 1) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage - 1 %>">&laquo;</a>
                                </li>
                                <% } %>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                </li>
                                <% } %>
                                <% if (currentPage < totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="?page=<%= currentPage + 1 %>">&raquo;</a>
                                </li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%- include('../../../_partials/dashboard/_footer'); -%>
        <!-- partial -->
    </div>
</div>
</div>
<script src="/dashboard/vendors/js/vendor.bundle.base.js"></script>
<script src="/dashboard/vendors/typeahead.js/typeahead.bundle.min.js"></script>
<script src="/dashboard/vendors/select2/select2.min.js"></script>
<script src="/dashboard/js/off-canvas.js"></script>
<script src="/dashboard/js/hoverable-collapse.js"></script>
<script src="/dashboard/js/template.js"></script>
<script src="/dashboard/js/settings.js"></script>
<script src="/dashboard/js/todolist.js"></script>
<script src="/dashboard/js/file-upload.js"></script>
<script src="/dashboard/js/typeahead.js"></script>
<script src="/dashboard/js/select2.js"></script>
</body>
</html>
