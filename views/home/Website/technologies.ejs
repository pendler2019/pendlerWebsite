<%- include('../../_partials/_header'); -%>
<div class="content-wrapper  js-content-wrapper">
  <section data-anim="fade" class="breadcrumbs ">
      <div class="container">
        <div class="row">
          <div class="col-auto">
            <div class="breadcrumbs__content">
  
              <div class="breadcrumbs__item ">
                <a href="home">Home</a>
              </div>
  
              <div class="breadcrumbs__item ">
                <a href="#">Technologies</a>
              </div>
  
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="page-header -type-1" style="background:linear-gradient(180deg, #FFF 0%, #1C1349 108.34%);">
      
        <div class="page-header__content">
          <div class="row justify-center text-center">
            <div class="col-auto">
              <div>
                <h1 class="page-header__title">Technologies</h1>
              </div>
            </div>
          </div>
        </div>
    </section>
    <section class="layout-pb-lg">
      <div class = container >
      <div class = t_container >
        <div class="row y-gap-30 lg:pt-50">
          <% tec.forEach((folios,index)=> { %>
        <div class = "card col-xl-3 col-lg-4 col-md-6">
          <div class = image>
            <img href = "#" src ="../../images/<%= folios.imageUrl %>"><span style="font-weight: bold;color: #1a1245;"> <%= folios.name %></span>
           
          </div>
          <div class = content>
            
              <%- folios.description.replace(/<p>(.*?)<\/p>/g, '<p class="paragraph">$1</p>').replace(/<li>(.*?)<\/li>/g, '<li class="list">‚óè $1</li>').replace(/<h4>(.*?)<\/h4>/g, '<br><h4 class="heading"><strong>$1</strong></h4><br>').replace(/<\/p>/g, '</p><br>').replace(/<ul>(.*?)<\/ul>/g, '<ul class="bullet-points">$1</ul>') %>
            
            </div>
        </div>  
        <% }) %>  
          
      </div>
      </div>
    </section>

