      <section class="layout-pt-md layout-pb-md bg-beige-1" style="padding-top: 0px;margin-top: -70px;">
        <div class="container">
          <div data-anim-wrap class="row y-gap-30">
            <% ct.forEach((ctt,index)=> { %>
            <div class="col-lg-3 col-sm-6">
              <div class="counter -type-1"
                style="background: linear-gradient(90deg, #FFF 0%, #1C1349 108.34%);border-radius: 23px !important;">
