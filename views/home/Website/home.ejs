                <div class="counter__title text-light-1"><%= ctt.title %></div>
              </div>
            </div>
            <% }) %>

          </div>
        </div>
      </section>

      <section class="layout-pt-lg layout-pb-lg bg-dark-5" style="padding-top: 10px;">
        <div class="container">
          <div class="row justify-center text-center">
            <div class="col-auto">

              <div class="sectionTitle ">

                <h2 class="sectionTitle__title text-white">Portfolio of Clients</h2>
              </div>

            </div>
          </div>

          <div class="pt-60 lg:pt-50 js-section-slider" data-gap="30" data-pagination data-slider-cols="xl-2"
            data-anim-wrap>
            <div class="swiper-wrapper">
              <% folio.forEach((folios,index)=> { %>
              <div class="swiper-slide">
                <div class="testimonials -type-3 sm:px-20 sm:py-40 bg-white">
                  <div class="row y-gap-30 md:text-center md:justify-center">


                    <div class="col-md">
                      <div class="d-flex items-center md:justify-center">
                        <span class="text-16 lh-1 text-yellow-1"><%= folios.client %></span>

                      </div>

                      <p class="testimonials__text text-16 lh-17 fw-500 mt-15"><%= folios.message %></p>

                    </div>
                  </div>
                </div>
              </div>
              <% }) %>
             
            </div>

            <div class="d-flex justify-center x-gap-15 items-center pt-60 lg:pt-40">
              <div class="col-auto">
                <button class="d-flex items-center text-24 arrow-left-hover js-prev">
                  <i class="icon text-white icon-arrow-left"></i>
                </button>
              </div>
              <div class="col-auto">
                <div class="pagination -arrows js-pagination"></div>
              </div>
              <div class="col-auto">
                <button class="d-flex items-center text-24 arrow-right-hover js-next">
                  <i class="icon text-white icon-arrow-right"></i>
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>
