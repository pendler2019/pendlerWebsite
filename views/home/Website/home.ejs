<%- include ('../../_partials/_header'); -%>
  <div class="content-wrapper  js-content-wrapper">

  <!--Carousel Wrapper-->
  <div id="carousel-thumb" class="carousel carousel-thumbnails slide srjj" data-ride="carousel" data-interval="10000">
    <!--Slides-->
    <div class="carousel-inner" role="listbox">
      <% banns.forEach((ban,index)=> { %>
      <div class="carousel-item <%= index === 0 ? 'active' : '' %> carousel-banner">
        <img class="d-block w-100 carousel-img-fit" src="../../images/<%= ban.imageUrl %>" alt="First slide">
               <div class="row carousel-ban-text-adj">
          <div class="row col-12 banner">
            <h1 class="col-12 carousel-header-adj"><%= ban.name %></h1>
            <p class="col-12 carousel-paragraph"><%= ban.description %></p>
          </div>
        </div>
      </div>
      <% }) %>
     
    </div>
    <a class="carousel-control-prev" href="#carousel-thumb" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carousel-thumb" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <!--/.Controls-->

  </div>
    <section class="layout-pt-lg layout-pb-lg masthead -type-6 animated"
      style="padding-bottom: 40px;padding-top: 10px;">
      <div class="masthead__bg">
        <img src="img/home-7/hero/1.svg" alt="blob">
        <img src="img/home-7/hero/2.svg" alt="blob">
        <img src="img/home-7/hero/bg.png" alt="background">

        <div class="absolute-full-center" id="js-masthead-1-particles"><canvas class="particles-js-canvas-el"
            style="width: 100%; height: 100%;" width="1920" height="1129"></canvas></div>
      </div>
      <div data-anim-wrap class="container">
        <div class="row justify-center text-center">
          <div class="col-auto">

            <div class="sectionTitle ">

              <h2 class="sectionTitle__title ">Our values</h2>
              <p class="sectionTitle__text ">“Our value is the sum of our values.” Joe Batten</p>
            </div>

          </div>
        </div>
        <div class="row">
          <% ourval.forEach((ov,index)=> { %>
          <div class="col-xs-12 col-sm-4 col-md-3" style="padding-right: 15px;padding-top: 15px;border-radius: 25%">
            <div class="image-flip">
              <div class="mainflip flip-0">
                <div class="frontside">
                  <div class="card">
                    <div class="card-body text-center">
                      <p><img class=" img-fluid" src="../../images/<%= ov.imageUrl %>" alt="card image"
                          style="padding-top: 15px;"></p>
                      <h4 class="card-title"><%= ov.title %></h4>
                      <a href="https://www.fiverr.com/share/qb8D02" class="btn  btn-primary-srj btn-sm"
                        style="color: #04d697 !important;"><i class="fa fa-plus"></i></a>
                    </div>
                  </div>
                </div>
                <div class="backside">
                  <div class="card">
                    <div class="card-body text-center mt-4">
                      <h4 class="card-title"><%= ov.title %></h4>
                      <p class="card-text"><%= ov.description %></p>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>
    <section class="layout-pt-lg layout-pb-lg bg-dark-5" style="padding-top: 10px;">
      <div data-anim-wrap class="container">
        <div class="row y-gap-50 justify-between items-center">
          <div class="col-lg-2">

            <div class="sectionTitle -light">

              <h2 class="sectionTitle__title ">What We Offer</h2>

              <p class="sectionTitle__text "><%= mt.we_offer %></p>

            </div>
          </div>
          <div class="col-lg-5 col-md-6">
            <div>
              <div class="coursesCard -type-1 shadow-3 rounded-8 bg-white"
                style="background: linear-gradient(90deg, #E59819 0%, #1C1349 60.34%);">
                <div class="relative">
                  <div class="d-flex justify-between py-10 px-10 absolute-full-center z-3">
                  </div>
                </div>
                <div class="h-100 pt-20 pb-15 pl-30 pr-40">
                  <div class="d-flex items-center">
                    <div class="text-20" style="color:white !important;font-weight: bold;">Our Mission</div>
                  </div>
                  <div class="text-17 lh-15 fw-500 text-dark-1 mt-10" style="color:white !important;"><%= mt.mission %></div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-lg-5 col-md-6">
            <div>
              <div class="coursesCard -type-1 shadow-3 rounded-8 bg-white"
                style="background: linear-gradient(90deg, #E59819 0%, #1C1349 60.34%);">
                <div class="relative">
                  <div class="d-flex justify-between py-10 px-10 absolute-full-center z-3">
                  </div>
                </div>
                <div class="h-100 pt-20 pb-15 pl-30 pr-40">
                  <div class="d-flex items-center">
                    <div class="text-20" style="color:white !important;font-weight: bold;">Our Team</div>
                  </div>
                  <div class="text-17 lh-15 fw-500 text-dark-1 mt-10" style="color:white !important;"><%= mt.team %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include ('../../_partials/_toplinks'); -%>

      <section class="layout-pt-lg layout-pb-lg masthead -type-1 js-mouse-move-container"
        style="padding-top: 10px;padding-bottom: 115px">
        <!-- <section class="masthead -type-1 js-mouse-move-container"> -->
        <div class="masthead__bg">
          <img src="img/home-1/hero/bg.png" alt="image">
        </div>


        <div class="container">
          <div class="row y-gap-30 justify-between items-center">
            <div class="col-xl-5 col-lg-6 col-md-9 lg:order-2">
              <h3 class="text-40 lh-1" style="color: white !important;">Land your dream job in Pendler Solutions</h3>
              <p class="mt-25" style="color: white !important;">Don’t wait for opportunity. Create it.</p>
              <div class="d-inline-block mt-30">
                <a href="<%=baseUrl %>/careers" class="button -md -outline-purple-1 text-sky-1"
