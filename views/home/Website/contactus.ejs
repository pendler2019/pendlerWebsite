<script>
  document.addEventListener('DOMContentLoaded', function () {
      const contactForm = document.getElementById('contact-msg');
      const contactSuccessModal = document.getElementById('feedback-success-modal');
      const contactSuccessMessage = document.getElementById('feedback-success-message');
      const contactErrorModal = document.getElementById('feedback-error-modal');
      const contactErrorMessage = document.getElementById('feedback-error-message');

      contactForm.addEventListener('success', (event) => {
          event.preventDefault();

          const formData = new FormData(contactForm);
//console.log(formData);
          fetch('/contact', {
              method: 'POST',
              body: formData
          })
              .then(response => {
                  if (response.ok) {
                      contactSuccessMessage.innerHTML = 'Info: Application submitted successfully';
                      $(contactSuccessModal).modal('show');
                      setTimeout(hideContactSuccessModal, 3000);
                  } else {
                      response.text().then(errorMessage => {
                          showContactErrorModal(errorMessage);
                      });
                  }
              })
              .catch(error => {
                  console.error('Error:', error);
                  showContactErrorModal('Failed to submit application');
              });
      });

      const hideContactSuccessModal = () => {
          $(contactSuccessModal).modal('hide');
      };

      const hideContactErrorModal = () => {
          $(contactErrorModal).modal('hide');
      };

      const showContactErrorModal = (message) => {
          contactErrorMessage.innerHTML = `Error: ${message}`;
          $(contactErrorModal).modal('show');
          setTimeout(hideContactErrorModal, 3000);
      };

      $(contactSuccessModal).on('hidden.bs.modal', () => {
          contactForm.reset();
      });
  });
</script>
